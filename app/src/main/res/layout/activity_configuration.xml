<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfigurationActivity"
    android:padding="15dp">

    <TextView
        android:id="@+id/TV_tri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/SwitchPrice"
        app:layout_constraintBottom_toBottomOf="@id/SwitchPrice"
        android:text="@string/tri_price"
        android:layout_margin="20dp"/>

    <Switch
        android:id="@+id/SwitchPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/TV_defaultPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/IT_defaultPrice"
        app:layout_constraintBottom_toBottomOf="@id/IT_defaultPrice"
        android:text="@string/default_price_label"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/IT_defaultPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/SwitchPrice"
        app:layout_constraintLeft_toLeftOf="@id/SwitchPrice"
        app:layout_constraintTop_toBottomOf="@id/SwitchPrice"
        android:inputType="number"
        />


</androidx.constraintlayout.widget.ConstraintLayout>